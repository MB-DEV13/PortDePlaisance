<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Catways</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-4">
      <h1>Gestion des Catways</h1>
      <a href="/dashboard" class="btn btn-secondary mb-3"
        >Retour au Dashboard</a
      >
      <form action="/catways" method="POST" class="mb-4">
        <div class="mb-3">
          <label for="number" class="form-label">Numéro de Catway</label>
          <input
            type="text"
            class="form-control"
            id="number"
            name="number"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Ajouter</button>
      </form>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Numéro</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% catways.forEach(catway => { %>
          <tr>
            <td><%= catway.number %></td>
            <td>
              <form
                action="/catways/<%= catway._id %>?_method=DELETE"
                method="POST"
                style="display: inline-block"
              >
                <button class="btn btn-danger btn-sm">Supprimer</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
