<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Réservations</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-4">
      <h1>Gestion des Réservations</h1>
      <a href="/dashboard" class="btn btn-secondary mb-3"
        >Retour au Dashboard</a
      >
      <form action="/reservations" method="POST" class="mb-4">
        <div class="mb-3">
          <label class="form-label">Catway ID</label>
          <input type="text" name="catway" class="form-control" required />
          <label class="form-label">Nom du client</label>
          <input type="text" name="clientName" class="form-control" required />
          <label class="form-label">Nom du bateau</label>
          <input type="text" name="boatName" class="form-control" required />
          <label class="form-label">Date début</label>
          <input type="date" name="startDate" class="form-control" required />
          <label class="form-label">Date fin</label>
          <input type="date" name="endDate" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Ajouter</button>
      </form>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Client</th>
            <th>Bateau</th>
            <th>Début</th>
            <th>Fin</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% reservations.forEach(r => { %>
          <tr>
            <td><%= r.clientName %></td>
            <td><%= r.boatName %></td>
            <td><%= new Date(r.startDate).toLocaleDateString('fr-FR') %></td>
            <td><%= new Date(r.endDate).toLocaleDateString('fr-FR') %></td>
            <td>
              <form
                action="/reservations/<%= r._id %>?_method=DELETE"
                method="POST"
                style="display: inline-block"
              >
                <button class="btn btn-danger btn-sm">Supprimer</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
